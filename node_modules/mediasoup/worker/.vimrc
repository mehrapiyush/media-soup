" replace zero_one_two_three by zeroOneTwoThree
let @4 = ':%s/\<\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)\>/\1\u\2\3\u\4\5\u\6\7\u\8\9/c'
let @3 = ':%s/\<\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)\>/\1\u\2\3\u\4\5\u\6\7/c'
let @2 = ':%s/\<\(\w\+\)_\([a-z]\)\(\w\+\)_\([a-z]\)\(\w\+\)\>/\1\u\2\3\u\4\5/c'
let @1 = ':%s/\<\(\w\+\)_\([a-z]\)\(\w\+\)\>/\1\u\2\3/c'
